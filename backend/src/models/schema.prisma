generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender{
  MALE
  FEMALE
  OTHER
}

enum OrderStatus {
  DELIVERED
  SHIPPED
  PROCESSING
}

model User{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  gender Gender?
  phoneNumber String?
  dateBirth DateTime?
  preferences Boolean[] @default([true, false, false, true, false, false])
  totalOrders Int @default(0)
  totalRating Float @default(0)
  totalWishlist Int @default(0)

  wishList Wishlist?
  cart Cart?
  orders Order[]
}

model Wishlist{
  id Int @id @default(autoincrement())
  quantity Int @default(0)

  userId Int @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  product WishlistProduct[]
}

model WishlistProduct{
  wishlistId Int
  wishlist Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  productId   Int
  variant Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@id([wishlistId, productId])

}

model Cart{
  id        Int   @id @default(autoincrement()) 
  subtotal  Float @default(0)
  savings   Float @default(0)
  shipping  Float @default(0)
  tax       Float @default(0)
  promoCode String?
  totalCost Float @default(0)

  userId    Int   @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  cartVariants CartVariant[]
}

model CartVariant{
  cartId Int
  cart Cart @relation(fields: [cartId], references: [id], onDelete: Cascade)

  variantId Int
  variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  @@id([cartId, variantId])
}

model Order{
  id          Int @id @default(autoincrement())
  time        DateTime @default(now())
  address     String
  rastreio    String
  situation   OrderStatus
  totalPrice  Float

  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  variants OrderVariant[]
  
}

model OrderVariant{
  orderId Int
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  variantId Int
  variant Variant @relation(fields: [variantId], references: [id], onDelete: Cascade)

  quantity Int @default(1)
  unitPrice Float

  @@id([orderId, variantId])
}

model Product {
  id Int @id @default(autoincrement())
  name String // Esquecemos de colocar o nome
  rating Float 
  price Float
  numOfReviews Int
  isOutOfStock Boolean

  variant Variant[]
  review Review[]
  wishlistProducts WishlistProduct[]
}

model Variant {
  id Int @id @default(autoincrement())
  color String @unique // @unique pois não pode existir duas ou mais variantes da mesma cor
  size String
  stock Int

  productId Int //productId Não pode ser unique pq se não ele so aceita apenas uma variante
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  carts CartVariant[]
  orderVariants OrderVariant[]
}

model Review {
  id Int @id @default(autoincrement())
  rating Float

  productId Int @unique
  product Product @relation(fields: [productId], references: [id])
}