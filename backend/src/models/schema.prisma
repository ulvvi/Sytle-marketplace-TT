generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Gender{
  MALE
  FEMALE
  OTHER
}
model User{
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  gender Gender?
  phoneNumber String?
  dateBirth DateTime?
  preferences Boolean[] @default([true, false, false, true, false, false])
  totalOrders Int @default(0)
  totalRating Float @default(0)
  totalWishlist Int @default(0)
  //prisma tava reclamando pq esse campo da wl tem q ser opcional, mas so na hr de fazer o controller garantir q a wl
  //seja criada junta que ta show(eu acho)

  wishList WishList?
  //cart Cart?
}

model WishList{
  id Int @id @default(autoincrement())
  quantity Int @default(0)

  userId Int @unique
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  //product WishListProduct[]
}


model Product {
  id Int @id @default(autoincrement())
  rating Float 
  price Float
  numOfReviews Int
  isOutOfStock Boolean // Isso não deveria ser um campo para a Variant? as variantes que tem stock, logo, se ele acaba, deveria informar ess falta relacionada a própria variante. 

  variant Variant[]
  review Review[]
}

model Variant {
  id Int @id @default(autoincrement())
  color String @unique // @unique pois não pode existir duas ou mais variantes da mesma cor
  size String
  stock Int

  productId Int @unique
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id Int @id @default(autoincrement())
  rating Float

  productId Int @unique
  product Product @relation(fields: [productId], references: [id])
}